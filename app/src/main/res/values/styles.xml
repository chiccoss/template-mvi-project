<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



        <item name="textInputStyleExposedDropdownMenu">@style/Widget.AppTheme.TextInputLayout.FilledBox.ExposedDropdownMenu</item>



        <item name="bottomBar">@style/Widget.AppTheme.BottomNavigationView</item>
        <!-- Edit Text Region -->
        <item name="editTextStyle">@style/Widget.AppTheme.EditText</item>
    </style>

    <style name="Widget.AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/TextButton</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:textColorHint">@color/grayText</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>


    <style name="Widget.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:elevation">@dimen/margin_large</item>
        <item name="elevation">@dimen/margin_large</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorTertiary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:paddingEnd">@dimen/margin_micro</item>
        <item name="endIconTint">@null</item>
    </style>

</resources>
